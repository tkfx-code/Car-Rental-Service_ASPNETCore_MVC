@using Microsoft.AspNetCore.Identity
@model MVC_Project.Models.BookingViewModel

@{
    ViewData["Title"] = "Delete";
}
@if (TempData["SucessMessage"] != null)
{
	<div class="alert alert-success alert-dismissable fade show" role="alert">
		@TempData["SucessMessage"]
	</div>
}

@if (User.Identity.IsAuthenticated)
{
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Booking</h4>
        <dt class="col-sm-2">
            Car
        </dt>
        <dd class="col-sm-10">
            @(Model.Car != null ? $"{Model.Car.Make} {Model.Car.Model}" : "Unknown")
        </dd>

        <dt class="col-sm-2">
            Customer
        </dt>
        <dd class="col-sm-10">
            @(Model.Customer != null ? $"{Model.Customer.FirstName} {Model.Customer.LastName}" : "Unknown")
        </dd>
        <hr />

        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.StartDate)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.StartDate)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.EndDate)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.EndDate)
            </dd>
        </dl>
    
        <form asp-action="Delete">
            <input type="hidden" asp-for="BookingId" onsubmit="return confirm('Are you sure you want to delete this booking?');"/>
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to Profile</a>
        </form>
    </div>
}
